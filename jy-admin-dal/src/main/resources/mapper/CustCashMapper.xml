<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.loxf.jyadmin.dal.dao.CustCashMapper" >
  <resultMap id="BaseResultMap" type="org.loxf.jyadmin.dal.po.CustCash" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="cust_id" property="custId" jdbcType="VARCHAR" />
    <result column="cust_name" property="custName" jdbcType="VARCHAR" />
    <result column="balance" property="balance" jdbcType="DECIMAL" />
    <result column="type" property="type" jdbcType="INTEGER" />
    <result column="obj_id" property="objId" jdbcType="VARCHAR" />
    <result column="status" property="status" jdbcType="INTEGER" />
    <result column="obj_id" property="objId" jdbcType="VARCHAR" />
    <result column="remark" property="remark" jdbcType="TIMESTAMP" />
    <result column="created_at" property="createdAt" jdbcType="TIMESTAMP" />
    <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, cust_id, (select real_name from tb_cust b where b.cust_id = a.cust_id) as cust_name,  balance, `type`, obj_id, status, remark, created_at, updated_at
  </sql>
  <select id="count" resultType="java.lang.Integer">
    select count(1)
    from tb_cust_cash
    where 1=1
    <include refid="WHERE_SQL"></include>
  </select>

  <select id="pager" resultMap="BaseResultMap">
    select
    <include refid="Base_Column_List" />
    from tb_cust_cash a
    where 1=1
    <include refid="WHERE_SQL"></include>
    order by created_at desc
    limit #{pager.start} , #{pager.size}
  </select>

  <sql id="WHERE_SQL">
    <if test="custId!=null and custId!=''">
      and cust_id = #{custId}
    </if>
    <if test="custName!=null and custName!=''">
      and cust_id in (select cust_id from tb_cust t where t.real_name = #{custName})
    </if>
    <if test="type!=null">
      and `type` = #{type}
    </if>
    <if test="status!=null">
      and status = #{status}
    </if>
    <if test="objId!=null and objId !='' ">
      and obj_id = #{objId}
    </if>
    <if test="startDate != null and startDate!=''">
      and created_at >= #{startDate,jdbcType=TIMESTAMP}
    </if>
    <if test="endDate != null and endDate!=''">
      and created_at &lt; date_add(#{endDate}, INTERVAL 1 DAY)
    </if>
  </sql>

  <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Long" >
    select 
    <include refid="Base_Column_List" />
    from tb_cust_cash a
    where id = #{id,jdbcType=BIGINT}
  </select>

  <insert id="insert" parameterType="org.loxf.jyadmin.dal.po.CustCash" >
    insert into tb_cust_cash (id, cust_id, balance, 
      `type`, obj_id, status, remark,
      created_at, updated_at)
    values (#{id,jdbcType=BIGINT}, #{custId,jdbcType=VARCHAR}, #{balance,jdbcType=DECIMAL}, 
      #{type,jdbcType=INTEGER}, #{objId,jdbcType=VARCHAR}, 1, null, now(), now() )
  </insert>

  <update id="pendingCustCash" >
    update tb_cust_cash
    <set >
      <if test="remark!=null and remark!='' ">
        remark = #{remark},
      </if>
      status = #{status},
      updated_at = now()
    </set>
    where id = #{id}
  </update>

</mapper>