<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.loxf.jyadmin.dal.dao.PurchasedVideoMapper" >
  <resultMap id="BaseResultMap" type="org.loxf.jyadmin.dal.po.PurchasedVideo" >
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="cust_id" property="custId" jdbcType="VARCHAR" />
    <result column="nick_name" property="nickName" jdbcType="VARCHAR" />
    <result column="video_id" property="videoId" jdbcType="VARCHAR" />
    <result column="video_name" property="videoName" jdbcType="VARCHAR" />
    <result column="created_at" property="createdAt" jdbcType="TIMESTAMP" />
    <result column="updated_at" property="updatedAt" jdbcType="TIMESTAMP" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, cust_id, nick_name, video_id, video_name, created_at, updated_at
  </sql>
  <select id="count" resultType="int" parameterType="org.loxf.jyadmin.dal.po.PurchasedVideo" >
    select count(1)
    from tb_purchased_video
    where 1=1
    <include refid="WHERE_SQL"/>
  </select>

  <select id="list" resultMap="BaseResultMap" parameterType="org.loxf.jyadmin.dal.po.PurchasedVideo" >
    select
    <include refid="Base_Column_List" />
    from tb_purchased_video
    where 1=1
    <include refid="WHERE_SQL"/>
    order by created_at DESC
    <if test="pager!=null">
      limit #{pager.start}, #{pager.size}
    </if>
  </select>

  <sql id="WHERE_SQL">
    <if test="custId!=null and custId!=''">
      and cust_id = #{custId}
    </if>
    <if test="videoId!=null and videoId!=''">
      and video_id = #{videoId}
    </if>
    <if test="offerId!=null and offerId!=''">
      and offer_id = #{offerId}
    </if>
  </sql>

  <insert id="insert" parameterType="org.loxf.jyadmin.dal.po.PurchasedVideo" >
    insert into tb_purchased_video (id, cust_id, nick_name, 
      video_id, video_name, created_at, 
      updated_at)
    values (#{id,jdbcType=BIGINT}, #{custId,jdbcType=VARCHAR}, #{nickName,jdbcType=VARCHAR}, 
      #{videoId,jdbcType=VARCHAR}, #{videoName,jdbcType=VARCHAR}, now(), now())
  </insert>

</mapper>